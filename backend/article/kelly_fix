git filter-branch -f --commit-filter '
      if [ "$GIT_COMMITER_EMAIL" = "kstorm@blackboxoperations.com" ];
      then
              GIT_AUTHOR_NAME="drp";
              GIT_COMMITTER_NAME="drp";
	      GIT_AUTHOR_EMAIL="drp@noreply";
              GIT_COMMITTER_EMAIL="drp@noreply";
              git commit-tree "$@";
      else
              git commit-tree "$@";
      fi' HEAD

